{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "{{ pkg.name }}",
        "version": "{{ pkg.version }}",
        "description": "{{ pkg.description }}",
        "author": "{{ pkg.author.name }}",
        "icon": "files/icons/IconMouseOver.png",
        "icon_gray": "files/icons/IconMouseNormal.png",
        "minimum-overwolf-version": "0.77.10.0"
    },
    "data": {
        "start_window": "MainWindow",
        "windows": {
            "MainWindow": {
                "file": "files/main.html",
                "transparent": true,
                "resizable": true,
                "size": {
                    "width": 400,
                    "height": 300
                },
                "min_size": {
                    "width": 200,
                    "height": 200
                },
                "max_size": {
                    "width": 600,
                    "height": 500
                }
            }
        }
    }
}
